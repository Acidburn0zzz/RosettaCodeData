fun mergeSort(m):
    return m if m.size <= 1
    let middle = m.size / 2
    let left   = merge(m[:middle])
    let right  = merge(m[middle:]);

fun merge(left, right):
    let result = []
    while |left or right|.!empty:
        result ++ (left.shift() if |left <= right|.first ...
        else right.shift())
        result ++ left ++ right

